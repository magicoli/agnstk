{
    "name": "magicoli/agnstk",
    "description": "AGNSTK - Agnostic Glue for Non-Specific ToolKits",
    "type": "library",
    "require": {
        "php": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "AGNSTK\\Core\\": "core/app/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "cd adapters/wordpress && composer install",
            "cd adapters/drupal && composer install",
            "cd adapters/octobercms && composer install",
            "cd adapters/joomla && composer install"
        ],
        "post-update-cmd": [
            "cd adapters/wordpress && composer update",
            "cd adapters/drupal && composer update", 
            "cd adapters/octobercms && composer update",
            "cd adapters/joomla && composer update"
        ]
    },
    "minimum-stability": "stable"
}
